!!!
%html
  %head
    %title Las Vegas Ruby User Group
    = stylesheet_link_tag "application", :media => "all"
    = csrf_meta_tags
    %meta{:name => "viewport", :content => 'width=device-width, initial-scale=1.0'}
  %body
    .container
      .row
        = render 'shared/header'
        = render 'shared/alerts'
        = yield
      %footer
        A Project by the Las Vegas Ruby User Group
        |
        = mail_to('organizers@lvrug.org', 'Report a bug')
        |
        = link_to('Source code', 'https://github.com/LasVegasRubyGroup/user_group_app', target: 'blank')
        |
        = mail_to('organizers@lvrug.org', 'Feedback')
        |
        = link_to('Leaderboard', leaderboard_path)

    = javascript_include_tag "application" 

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-36518064-1']);
      _gaq.push(['_setDomainName', 'lvrug.org']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
