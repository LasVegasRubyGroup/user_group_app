.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{ "data-target" => ".nav-collapse", "data-toggle" => "collapse" }
      = link_to(image_tag('sticker_small_2012.png') + " Las Vegas Ruby Group" , root_path, class: 'logo pull-left')
      .container.nav-collapse
        %ul.nav.pull-right
          %li= link_to('Meetup', 'http://meetup.lvrug.org', target: 'blank')
          %li= link_to('#VegasTech Bulletin Board', 'http://news.lvrug.org', target: 'blank')
          %li= link_to 'Topics', topics_path
          - if current_user.organizer
            %li= link_to('Create Meeting', new_meeting_path)
          %li= current_user.session_control
          %li= current_user.registration_link
