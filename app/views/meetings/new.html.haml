.row
  .span6
    =simple_form_for @meeting, html: { class: 'form-horizontal meeting_form'} do |f|
      %legend Meeting
      = f.input(:date)

      - i = 0
      = f.simple_fields_for :time_slots do |f|
        %fieldset.time_slot
          %legend Slot #{i + 1}
          = f.input(:starts_at)
          = f.input(:ends_at)
          = f.input(:topic_id, as: :hidden)
          = f.input(:presenter_id, as: :select)
          .topic_title

        - i += 1
      
      = f.submit

  .span6
    %ul{ data: { spy: "affix" } }
      = render(partial: 'topics/simple_topic', collection: @topics, as: 'topic')